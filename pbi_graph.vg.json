{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": { "type": "fit", "contains": "padding", "resize": true },

  "signals": [
    { "name": "rainMax", "value": 40 },
    { "name": "padFrac", "value": 0.4 },

    { "name": "labelPad", "value": 8 },
    { "name": "labelCollide", "value": 15 },
    { "name": "labelIters", "value": 6 },

    { "name": "endGap", "value": 30 },
    { "name": "labelOffset", "value": 60 },
    { "name": "labelX", "value": 70 },
    { "name": "labelLineGap", "value": 6 },

    {
      "name": "hover",
      "value": null,
      "on": [
        { "events": "@pt:mousemove", "update": "datum" },
        { "events": "view:mouseleave", "update": "null" }
      ]
    },

    {
      "name": "yMinSafe",
      "update": "length(data('stats')) ? data('stats')[0].yMin : 0"
    },
    {
      "name": "yMaxSafe",
      "update": "length(data('stats')) ? data('stats')[0].yMax : 1"
    },
    {
      "name": "domainMinSafe",
      "update": "length(data('stats')) ? data('stats')[0].domainMin : 0"
    }
  ],

  "data": [
    {
      "name": "dataset",

      "transform": [
        {
          "type": "formula",
          "as": "DateParsed",
          "expr": "isString(datum['Date']) ? (isValid(timeParse(datum['Date'], '%Y-%m-%d %H:%M:%S')) ? timeParse(datum['Date'], '%Y-%m-%d %H:%M:%S') : (isValid(timeParse(datum['Date'], '%Y-%m-%dT%H:%M:%S')) ? timeParse(datum['Date'], '%Y-%m-%dT%H:%M:%S') : toDate(replace(datum['Date'], ' ', 'T')))) : toDate(datum['Date'])"
        },
        {
          "type": "formula",
          "as": "DateDay",
          "expr": "datetime(year(datum.DateParsed), month(datum.DateParsed), date(datum.DateParsed))"
        },
        {
          "type": "formula",
          "as": "TotalHead",
          "expr": "datum['Average of Total Head']"
        },
        {
          "type": "formula",
          "as": "Rainfall",
          "expr": "datum['Average of Daily rainfall']"
        },
        {
          "type": "filter",
          "expr": "isValid(datum.DateDay) && isValid(datum.TotalHead) && datum.Drillhole_USC != null"
        }
      ]
    },

    {
      "name": "rainByDay",
      "source": "dataset",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["DateDay"],
          "fields": ["Rainfall"],
          "ops": ["mean"],
          "as": ["RainDay"]
        },
        {
          "type": "formula",
          "as": "RainClamped",
          "expr": "min(max(datum.RainDay, 0), rainMax)"
        }
      ]
    },

    {
      "name": "headByDay",
      "source": "dataset",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["DateDay", "Drillhole_USC"],
          "fields": ["TotalHead"],
          "ops": ["mean"],
          "as": ["TotalHeadDay"]
        },
        {
          "type": "lookup",
          "from": "rainByDay",
          "key": "DateDay",
          "fields": ["DateDay"],
          "values": ["RainDay"],
          "as": ["RainDay"]
        },
        {
          "type": "formula",
          "as": "RainDaySafe",
          "expr": "isValid(datum.RainDay) ? datum.RainDay : 0"
        },
        {
          "type": "collect",
          "sort": {
            "field": ["Drillhole_USC", "DateDay"],
            "order": ["ascending", "ascending"]
          }
        }
      ]
    },

    {
      "name": "stats",
      "source": "headByDay",
      "transform": [
        {
          "type": "aggregate",
          "fields": ["TotalHeadDay", "TotalHeadDay"],
          "ops": ["min", "max"],
          "as": ["yMin", "yMax"]
        },
        {
          "type": "formula",
          "as": "yPad",
          "expr": "(datum.yMax - datum.yMin) * padFrac"
        },
        {
          "type": "formula",
          "as": "domainMin",
          "expr": "datum.yMin - datum.yPad"
        }
      ]
    },

    {
      "name": "lastPoints",
      "source": "headByDay",
      "transform": [
        {
          "type": "window",
          "groupby": ["Drillhole_USC"],
          "sort": { "field": "DateDay", "order": "descending" },
          "ops": ["row_number"],
          "as": ["rn"]
        },
        { "type": "filter", "expr": "datum.rn === 1" }
      ]
    },

    {
      "name": "endLabelsdataset",
      "source": "lastPoints",
      "transform": [
        { "type": "formula", "as": "xLabel", "expr": "width + 30" },
        {
          "type": "formula",
          "as": "y0",
          "expr": "isValid(datum.TotalHeadDay) ? scale('yHead', datum.TotalHeadDay) : (height/2)"
        },

        {
          "type": "force",
          "static": true,
          "iterations": { "signal": "labelIters" },
          "forces": [
            { "force": "y", "y": { "field": "y0" }, "strength": 1 },
            { "force": "collide", "radius": { "signal": "labelCollide" } }
          ]
        }
      ]
    },

    {
      "name": "endLabels",
      "source": "endLabelsdataset",
      "transform": [
        {
          "type": "formula",
          "as": "yLabel",
          "expr": "min(max(datum.y, labelPad), height - labelPad)"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": { "data": "headByDay", "field": "DateDay" },
      "range": "width"
    },

    {
      "name": "yHead",
      "type": "linear",
      "domain": [{ "signal": "domainMinSafe" }, { "signal": "yMaxSafe" }],
      "nice": true,
      "zero": false,
      "range": "height"
    },

    {
      "name": "yRain",
      "type": "linear",
      "domain": [0, { "signal": "rainMax" }],
      "range": [
        { "signal": "height" },
        { "signal": "scale('yHead', yMinSafe)" }
      ]
    },

    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "headByDay", "field": "Drillhole_USC" },
      "range": { "scheme": "category10" }
    }
  ],

  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "title": "Date",
      "labelAngle": -45,
      "labelAlign": "right",
      "tickCount": 12,
      "format": "%Y-%m-%d",
      "formatType": "time",
      "labelOverlap": "parity",
      "grid": true,
      "gridColor": "#e6e6e6",
      "gridOpacity": 1,
      "gridWidth": 1
    },
    {
      "orient": "left",
      "scale": "yHead",
      "title": "Average Total Head",
      "grid": true,
      "gridColor": "#e6e6e6",
      "gridOpacity": 1,
      "gridWidth": 1
    },
    {
      "orient": "right",
      "scale": "yRain",
      "title": "Precip mm",
      "tickCount": 5,
 "grid": true,
      "gridColor": "#4A9AFF",
      "gridOpacity": 1,
      "gridWidth": 1
    }
  ],

  "legends": [
    {
      "fill": "color",
      "title": "Drillhole USC",
      "orient": "top",
      "direction": "horizontal",
      "symbolType": "circle"
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": { "data": "rainByDay" },
      "encode": {
        "update": {
          "fill": { "value": "#0073FF" },
          "x": { "scale": "x", "field": "DateDay" },
          "width": { "value": 4 },
          "y": { "scale": "yRain", "field": "RainClamped" },
          "y2": { "scale": "yRain", "value": 0 },
          "tooltip": {
            "signal": "datum.RainDay > 0 ? { 'Date': timeFormat(datum.DateDay, '%Y-%m-%d'), 'Rainfall': format(datum.RainDay, '.2f') } : null"
          }
        }
      }
    },

    {
      "type": "rule",
      "encode": {
        "update": {
          "x": { "scale": "x", "signal": "hover ? hover.DateDay : null" },
          "y": { "value": 0 },
          "y2": { "signal": "height" },
          "stroke": { "value": "#888" },
          "strokeWidth": { "value": 1 },
          "strokeDash": { "value": [4, 4] },
          "opacity": { "signal": "hover ? 0.7 : 0" }
        }
      }
    },

    {
      "type": "group",
      "from": {
        "facet": {
          "data": "headByDay",
          "name": "series",
          "groupby": "Drillhole_USC"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": { "data": "series" },
          "encode": {
            "update": {
              "x": { "scale": "x", "field": "DateDay" },
              "y": { "scale": "yHead", "field": "TotalHeadDay" },
              "stroke": { "scale": "color", "field": "Drillhole_USC" },
              "strokeWidth": {
                "signal": "hover && hover.Drillhole_USC === datum.Drillhole_USC ? 4 : 2"
              }
            }
          }
        },

        {
          "type": "symbol",
          "name": "pt",
          "from": { "data": "series" },
          "encode": {
            "update": {
              "x": { "scale": "x", "field": "DateDay" },
              "y": { "scale": "yHead", "field": "TotalHeadDay" },
              "fill": { "scale": "color", "field": "Drillhole_USC" },
              "size": { "value": 80 },
              "stroke": { "value": "white" },
              "strokeWidth": {
                "signal": "hover && (+hover.DateDay) === (+datum.DateDay) ? 2 : 0"
              },
              "opacity": {
                "signal": "hover && (+hover.DateDay) === (+datum.DateDay) ? 1 : 0"
              },
              "tooltip": {
                "signal": "datum.RainDaySafe > 0 ? { 'Drillhole': datum.Drillhole_USC, 'Date': timeFormat(datum.DateDay, '%Y-%m-%d'), 'Total Head': format(datum.TotalHeadDay, '.2f'), 'Rainfall': format(datum.RainDaySafe, '.2f') } : { 'Drillhole': datum.Drillhole_USC, 'Date': timeFormat(datum.DateDay, '%Y-%m-%d'), 'Total Head': format(datum.TotalHeadDay, '.2f') }"
              }
            }
          }
        }
      ]
    },

    {
      "type": "rule",
      "from": { "data": "endLabels" },
      "encode": {
        "update": {
          "x": { "scale": "x", "field": "DateDay" },
          "x2": { "signal": "width + labelX - labelLineGap" },
          "y": { "field": "y0" },
          "y2": { "field": "yLabel" },
          "stroke": { "scale": "color", "field": "Drillhole_USC" },
          "opacity": { "value": 1 },
          "strokeWidth": { "value": 1 },
          "strokeDash": { "value": [3, 3] }
        }
      }
    },

    {
      "type": "text",
      "from": { "data": "endLabels" },
      "encode": {
        "update": {
          "x": { "signal": "width + labelX" },
          "y": { "field": "yLabel" },
          "text": { "field": "Drillhole_USC" },
          "align": { "value": "left" },
          "baseline": { "value": "middle" },
          "fill": { "scale": "color", "field": "Drillhole_USC" },
          "opacity": { "value": 1 }
        }
      }
    }
  ]
}
