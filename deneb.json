{
  "$schema": "https://vega.github.io/schema/vega/v5.json",

  "autosize": {
    "type": "fit",
    "contains": "padding",
    "resize": true
  },

  "width": "container",
  "height": "container",
  "padding": 30,

  "data": [
    {
      "name": "dataset",
      "transform": [
        { "type": "formula", "as": "DateParsed", "expr": "toDate(datum['DateOnly'])" },
        { "type": "formula", "as": "HeadNum", "expr": "toNumber(datum['Sum of Avg_Total_Head'])" }
      ]
    }
  ],

  "signals": [
    { "name": "headExtent", "update": "extent(data('dataset'), 'HeadNum')" },
    { "name": "roundStep", "value": 10 },
    { "name": "yMin", "update": "floor(headExtent[0] / roundStep) * roundStep" },
    { "name": "yMax", "update": "ceil(headExtent[1] / roundStep) * roundStep" }
  ],

  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "domain": { "data": "dataset", "field": "DateParsed" },
      "range": "width"
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": { "signal": "[yMin, yMax]" },
      "range": "height",
      "nice": false,
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "dataset", "field": "Drillhole_USC" },
      "range": "category"
    }
  ],

  "axes": [
    { "orient": "bottom", "scale": "xscale", "title": "Date" },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Total Head (Avg)",
      "format": ".0f",
      "grid": true,
      "tickCount": 6
    }
  ],

  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "dataset",
          "name": "series",
          "groupby": "Drillhole_USC"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": { "data": "series" },
          "encode": {
            "enter": {
              "x": { "scale": "xscale", "field": "DateParsed" },
              "y": { "scale": "yscale", "field": "HeadNum" },
              "stroke": { "scale": "color", "field": "Drillhole_USC" },
              "strokeWidth": { "value": 2 }
            }
          }
        }
      ]
    }
  ]
}
