{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": { "type": "fit", "contains": "padding", "resize": true },
  "padding": 5,
  "data": [
    {
      "name": "dataset",
      "transform": [
        {
          "type": "formula",
          "as": "Date",
          "expr": "toDate(datum['Date'])"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "domain": {
        "data": "dataset",
        "field": "Date"
      },
      "range": "width"
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "dataset",
        "field": "Average of Total Head"
      },
      "nice": true,
      "zero": false,
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "dataset",
        "field": "Drillhole_USC",
        "sort": true
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "labelAngle": -45,
      "labelAlign": "right"
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Total Head"
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "Drillhole USC",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "dataset",
          "groupby": "Drillhole_USC"
        }
      },
      "encode": {
        "update": {
          "y": { "value": 0 },
          "height": { "signal": "height * 0.7" }
        }
      },

      "clip": true,
      "marks": [
        {
          "type": "line",
          "from": { "data": "series" },
          "sort": { "field": "Date" },
          "encode": {
            "enter": {
              "x": {
                "scale": "xscale",
                "field": "Date"
              },
              "y": {
                "signal": "scale('yscale', datum['Average of Total Head']) * 0.7"
              },
              "stroke": {
                "scale": "color",
                "field": "Drillhole_USC"
              },
              "strokeWidth": { "value": 2 }
            }
          }
        }
      ]
    }
  ]
}
