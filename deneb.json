{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 800,
  "height": 400,
  "padding": 5,

  "data": [
    {
      "name": "dataset",
      "transform": [
        { "type": "formula", "as": "DateParsed", "expr": "toDate(datum['DateOnly'])" }
      ]
    }
  ],

  "signals": [
    { "name": "split", "value": 0.70 },

    { "name": "headExtent", "update": "extent(data('dataset'), 'Sum of Avg_Total_Head')" },
    { "name": "headMinRounded", "update": "floor(headExtent[0] / 10) * 10" },
    { "name": "headMaxRounded", "update": "ceil(headExtent[1] / 10) * 10" },

    { "name": "precipExtent", "update": "extent(data('dataset'), 'Sum of Precip_total')" },
    { "name": "precipMax", "update": "max(0, precipExtent[1])" }
  ],

  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "domain": { "data": "dataset", "field": "DateParsed" },
      "range": "width"
    },

    {
      "name": "yscaleHead",
      "type": "linear",
      "domain": { "signal": "[headMinRounded, headMaxRounded]" },
      "range": [{ "signal": "height * split" }, 0],
      "nice": false,
      "zero": false
    },

    {
      "name": "yscalePrecip",
      "type": "linear",
      "domain": [0, { "signal": "precipMax" }],
      "range": ["height", { "signal": "height * split" }],
      "nice": true,
      "zero": true
    },

    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "dataset", "field": "Drillhole_USC" },
      "range": "category"
    }
  ],

  "axes": [
    { "orient": "bottom", "scale": "xscale", "title": "Date" },

    {
      "orient": "left",
      "scale": "yscaleHead",
      "title": "Total Head (Avg)",
      "format": ".0f",
      "grid": true
    },

    {
      "orient": "right",
      "scale": "yscalePrecip",
      "title": "Precipitation (mm)",
      "grid": false
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": { "data": "dataset" },
      "encode": {
        "enter": {
          "x": { "scale": "xscale", "field": "DateParsed", "offset": -2 },
          "width": { "value": 4 },
          "y": { "scale": "yscalePrecip", "field": "Sum of Precip_total" },
          "y2": { "signal": "height" },
          "fill": { "value": "#ff7f0e" },
          "opacity": { "value": 0.35 }
        }
      }
    },

    {
      "type": "group",
      "from": {
        "facet": {
          "data": "dataset",
          "name": "drillhole",
          "groupby": "Drillhole_USC"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": { "data": "drillhole" },
          "encode": {
            "enter": {
              "x": { "scale": "xscale", "field": "DateParsed" },
              "y": { "scale": "yscaleHead", "field": "Sum of Avg_Total_Head" },
              "stroke": { "scale": "color", "field": "Drillhole_USC" },
              "strokeWidth": { "value": 2 }
            }
          }
        }
      ]
    },

    {
      "type": "rule",
      "encode": {
        "enter": {
          "x": { "value": 0 },
          "x2": { "signal": "width" },
          "y": { "signal": "height * split" },
          "stroke": { "value": "#999" },
          "strokeWidth": { "value": 1 },
          "opacity": { "value": 0.7 }
        }
      }
    }
  ]
}
