{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Average Total Head by Drillhole over time with Destination (thin bars) and Tailings (max) using log-scaled Y axis",
  "padding": 5,
  "autosize": { "type": "fit", "resize": true, "contains": "padding" },

  "signals": [
    { "name": "legendColumns", "update": "max(1, floor(width / 95))" }
  ],

  "data": [
    { "name": "dataset" },

    {
      "name": "filtered",
      "source": "dataset",
      "transform": [
        {
          "type": "filter",
          "expr": "datum['Date_New'] != null && datum['Drillhole_USC'] != null"
        },
        { "type": "formula", "expr": "toDate(datum['Date_New'])", "as": "DateParsed" },
        { "type": "formula", "expr": "timeFormat(datum['DateParsed'], '%Y-%m-%d')", "as": "DateDay" },

        { "type": "formula", "expr": "toNumber(datum['Total Head'])", "as": "TotalHeadNum" },
        { "type": "formula", "expr": "toNumber(datum['Destination'])", "as": "DestinationNum" },
        { "type": "formula", "expr": "toNumber(datum['Tailings'])", "as": "TailingsNum" }
      ]
    },

    {
      "name": "aggregated",
      "source": "filtered",
      "transform": [
        { "type": "filter", "expr": "datum.TotalHeadNum > 0" },
        {
          "type": "aggregate",
          "groupby": ["DateDay", "Drillhole_USC"],
          "fields": ["TotalHeadNum"],
          "ops": ["mean"],
          "as": ["AvgTotalHead"]
        },
        { "type": "formula", "expr": "toDate(datum['DateDay'])", "as": "DateParsedAgg" }
      ]
    },

    {
      "name": "destinationData",
      "source": "filtered",
      "transform": [
        { "type": "filter", "expr": "datum.DestinationNum > 0" },
        {
          "type": "aggregate",
          "groupby": ["DateDay"],
          "fields": ["DestinationNum"],
          "ops": ["mean"],
          "as": ["DestinationValue"]
        },
        { "type": "formula", "expr": "toDate(datum['DateDay'])", "as": "DateParsedAgg" }
      ]
    },

    {
      "name": "tailingsData",
      "source": "filtered",
      "transform": [
        { "type": "filter", "expr": "datum.TailingsNum > 0" },
        {
          "type": "aggregate",
          "groupby": ["DateDay"],
          "fields": ["TailingsNum"],
          "ops": ["max"],
          "as": ["TailingsValue"]
        },
        { "type": "formula", "expr": "toDate(datum['DateDay'])", "as": "DateParsedAgg" }
      ]
    },

    {
      "name": "tailingsLabel",
      "source": "tailingsData",
      "transform": [
        {
          "type": "window",
          "sort": { "field": "DateParsedAgg", "order": "descending" },
          "ops": ["rank"],
          "as": ["rnk"]
        },
        { "type": "filter", "expr": "datum.rnk === 1" }
      ]
    }
  ],

  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "domain": { "data": "filtered", "field": "DateParsed" },
      "range": "width"
    },

    {
      "name": "yscale",
      "type": "log",
      "base": 10,
      "domain": {
        "fields": [
          { "data": "aggregated", "field": "AvgTotalHead" },
          { "data": "destinationData", "field": "DestinationValue" },
          { "data": "tailingsData", "field": "TailingsValue" }
        ]
      },
      "range": "height",
      "nice": true,
      "zero": false
    },

    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "aggregated", "field": "Drillhole_USC" },
      "range": "category"
    }
  ],

  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "format": "%Y-%m-%d",
      "tickCount": 5,
      "grid": true,
      "labelPadding": 12,
      "labelAngle": -30
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Value (log scale)",
      "grid": true
    }
  ],

  "legends": [
    {
      "stroke": "color",
      "title": "Drillhole",
      "orient": "top",
      "symbolSize": 100,
      "symbolType": "stroke",
      "direction": "horizontal",
      "columns": { "signal": "legendColumns" }
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": { "data": "destinationData" },
      "encode": {
        "enter": {
          "x": { "scale": "xscale", "field": "DateParsedAgg", "offset": -1 },
          "width": { "value": 2 },

          "y": { "scale": "yscale", "field": "DestinationValue" },
          "y2": { "signal": "height" },

          "fill": { "value": "purple" },
          "opacity": { "value": 0.55 },

          "tooltip": {
            "signal": "{'Date': datum['DateDay'], 'Destination (Mean)': format(datum['DestinationValue'], '.2f')}"
          }
        },
        "hover": { "opacity": { "value": 0.85 } }
      }
    },

    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "aggregated",
          "groupby": "Drillhole_USC"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": { "data": "series" },
          "encode": {
            "enter": {
              "x": { "scale": "xscale", "field": "DateParsedAgg" },
              "y": { "scale": "yscale", "field": "AvgTotalHead" },
              "stroke": { "scale": "color", "field": "Drillhole_USC" },
              "strokeOpacity": { "value": 0.8 },
              "strokeWidth": { "value": 1.5 },
              "tooltip": {
                "signal": "{'Date': datum['DateDay'], 'Drillhole': datum['Drillhole_USC'], 'Avg Total Head': format(datum['AvgTotalHead'], '.2f')}"
              }
            },
            "hover": { "strokeWidth": { "value": 3 } }
          }
        },
        {
          "type": "symbol",
          "from": { "data": "series" },
          "encode": {
            "enter": {
              "x": { "scale": "xscale", "field": "DateParsedAgg" },
              "y": { "scale": "yscale", "field": "AvgTotalHead" },
              "fill": { "scale": "color", "field": "Drillhole_USC" },
              "size": { "value": 35 },
              "opacity": { "value": 0.85 }
            },
            "hover": { "size": { "value": 70 } }
          }
        }
      ]
    },

    {
      "type": "line",
      "from": { "data": "tailingsData" },
      "encode": {
        "enter": {
          "x": { "scale": "xscale", "field": "DateParsedAgg" },
          "y": { "scale": "yscale", "field": "TailingsValue" },
          "stroke": { "value": "orange" },
          "strokeWidth": { "value": 2 },
          "strokeDash": { "value": [5, 5] },
          "tooltip": {
            "signal": "{'Date': datum['DateDay'], 'Tailings (Max)': format(datum['TailingsValue'], '.2f')}"
          }
        },
        "hover": { "strokeWidth": { "value": 3 } }
      }
    },

    {
      "type": "text",
      "from": { "data": "tailingsLabel" },
      "encode": {
        "enter": {
          "x": { "scale": "xscale", "field": "DateParsedAgg", "offset": 6 },
          "y": { "scale": "yscale", "field": "TailingsValue", "offset": -6 },
          "text": { "value": "Tailings" },
          "fill": { "value": "orange" },
          "fontSize": { "value": 12 },
          "fontWeight": { "value": "bold" }
        }
      }
    }
  ],

  "title": {
    "text": "WL - Average Total Head & Tailings (Log Scale)",
    "fontSize": 16
  }
}
