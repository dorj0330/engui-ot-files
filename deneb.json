{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "WL - Average Total Head (zoomed), Destination (thin bars), Tailings (reference)",
  "padding": 5,
  "autosize": { "type": "fit", "resize": true, "contains": "padding" },

  "signals": [
    { "name": "legendColumns", "update": "max(1, floor(width / 95))" },
    { "name": "yZoomPadding", "value": 0.015 }
  ],

  "data": [
    { "name": "dataset" },

    {
      "name": "filtered",
      "source": "dataset",
      "transform": [
        { "type": "filter", "expr": "datum['Date_New'] && datum['Drillhole_USC']" },
        { "type": "formula", "expr": "toDate(datum['Date_New'])", "as": "DateParsed" },
        { "type": "formula", "expr": "timeFormat(datum['DateParsed'], '%Y-%m-%d')", "as": "DateDay" },
        { "type": "formula", "expr": "toNumber(datum['Total Head'])", "as": "TotalHeadNum" },
        { "type": "formula", "expr": "toNumber(datum['Destination'])", "as": "DestinationNum" },
        { "type": "formula", "expr": "toNumber(datum['Tailings'])", "as": "TailingsNum" }
      ]
    },

    {
      "name": "aggregated",
      "source": "filtered",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["DateDay", "Drillhole_USC"],
          "fields": ["TotalHeadNum"],
          "ops": ["mean"],
          "as": ["AvgTotalHead"]
        },
        { "type": "formula", "expr": "toDate(datum.DateDay)", "as": "DateParsedAgg" }
      ]
    },

    {
      "name": "totalHeadStats",
      "source": "aggregated",
      "transform": [
        {
          "type": "aggregate",
          "fields": ["AvgTotalHead", "AvgTotalHead"],
          "ops": ["min", "max"],
          "as": ["minTH", "maxTH"]
        }
      ]
    },

    {
      "name": "destinationData",
      "source": "filtered",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["DateDay"],
          "fields": ["DestinationNum"],
          "ops": ["mean"],
          "as": ["DestinationValue"]
        },
        { "type": "formula", "expr": "toDate(datum.DateDay)", "as": "DateParsedAgg" }
      ]
    },

    {
      "name": "tailingsData",
      "source": "filtered",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["DateDay"],
          "fields": ["TailingsNum"],
          "ops": ["max"],
          "as": ["TailingsValue"]
        },
        { "type": "formula", "expr": "toDate(datum.DateDay)", "as": "DateParsedAgg" }
      ]
    }
  ],

  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "domain": { "data": "filtered", "field": "DateParsed" },
      "range": "width"
    },

    {
      "name": "yscale",
      "type": "linear",
      "domain": [
        { "signal": "data('totalHeadStats')[0].minTH * (1 - yZoomPadding)" },
        { "signal": "data('totalHeadStats')[0].maxTH * (1 + yZoomPadding)" }
      ],
      "range": "height",
      "nice": false,
      "zero": false
    },

    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "aggregated", "field": "Drillhole_USC" },
      "range": "category"
    }
  ],

  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "title": "Date",
      "format": "%Y-%m-%d",
      "labelAngle": -30,
      "grid": true
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Total Head (zoomed)",
      "grid": true
    }
  ],

  "legends": [
    {
      "stroke": "color",
      "title": "Drillhole",
      "orient": "top",
      "direction": "horizontal",
      "columns": { "signal": "legendColumns" }
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": { "data": "destinationData" },
      "encode": {
        "enter": {
          "x": { "scale": "xscale", "field": "DateParsedAgg", "offset": -1 },
          "width": { "value": 2 },
          "y": { "scale": "yscale", "field": "DestinationValue" },
          "y2": { "signal": "height" },
          "fill": { "value": "purple" },
          "opacity": { "value": 0.4 }
        }
      }
    },

    {
      "type": "group",
      "from": {
        "facet": {
          "data": "aggregated",
          "groupby": "Drillhole_USC"
        }
      },
      "marks": [
        {
          "type": "line",
          "encode": {
            "enter": {
              "x": { "scale": "xscale", "field": "DateParsedAgg" },
              "y": { "scale": "yscale", "field": "AvgTotalHead" },
              "stroke": { "scale": "color", "field": "Drillhole_USC" },
              "strokeWidth": { "value": 2 }
            }
          }
        },
        {
          "type": "symbol",
          "encode": {
            "enter": {
              "x": { "scale": "xscale", "field": "DateParsedAgg" },
              "y": { "scale": "yscale", "field": "AvgTotalHead" },
              "fill": { "scale": "color", "field": "Drillhole_USC" },
              "size": { "value": 40 }
            }
          }
        }
      ]
    }
  ],

  "title": {
    "text": "WL - Average Total Head (Zoomed)",
    "fontSize": 16
  }
}
